---
# eidaws.stationlite configuration section
#
# Note, that environment varibles are substituted within this configuration
# section. The syntax is similar to the one provided within docker-compose.yml
# configuration files. See also:
# https://docs.docker.com/compose/compose-file/#variable-substitution
eidaws.stationlite:

  # Flask specific configuration variables. For further information see:
  # https://flask.palletsprojects.com/en/1.1.x/config/#builtin-configuration-values
  # ENV: 'production'
  # DEBUG: False
  # Must be True in order to enable fully FDSNWS conform error messages.
  # PROPAGATE_EXCEPTIONS: True

  # Flask-SQLAlchemy specific configuration variables. For further details see:
  # https://flask-sqlalchemy.palletsprojects.com/en/2.x/config/
  # SQLALCHEMY_DATABASE_URI: postgres://${POSTGRES_USER:-user}:${POSTGRES_PASSWORD:-pass}@localhost:5432/stationlite
  # SQLALCHEMY_ENGINE_OPTIONS:
  #   pool_size: 5
  # SQLALCHEMY_TRACK_NOTIFICATIONS: False

  # Absolute path to a logging configuration file. The file must follow the format
  # defined in
  # https://docs.python.org/3/library/logging.config.html#logging-config-fileformat.

  # PATH_LOGGING_CONF: ${HOME}/work/projects/eidaws/eidaws.stationlite/config/logging.conf

# -----------------------------------------------------------------------------
# eidaws.stationlite.harvest configuration section
#
# Note, that environment varibles are substituted within this configuration
# section. The syntax is similar to the one provided within docker-compose.yml
# configuration files. See also:
# https://docs.docker.com/compose/compose-file/#variable-substitution
eidaws.stationlite.harvest:

  # ----
  # List of URLs to eidaws-routing localconfig configurations to be harvested.
  #
  # urls_localconfig:
  #   - URL_DC1
  #   - URL_DC2
  #   - ...
  #
  # ----
  # List of service resources being harvested.
  #
  # services:
  #   - dataselect
  #   - station
  #   - wfcatalog
  #
  # ----
  # Perform a strict validaation of channel epochs to use the correct
  # dataselect method token depending on their restricted status. By default
  # method tokens are adjusted automatically.
  #
  # strict_restricted: True
  #
  # ----
  # Do not harvest <route></route> information from localconfig configuration
  # files.
  #
  # no_routes: False
  #
  # ----
  # Do not harvest <vnetwork></vnetwork> information from localconfig
  # configuration files.
  #
  # no_vnetworks: False
  #
  # ----
  # Delete outdated information from the DB which is older than the datetime
  # configured. The datetime configured must match the ISO8601 specification.
  #
  # truncate: "2020-01-01"
  #
  # ----
  # DB URL indicating the database dialect and connection arguments. For
  # further details see also:
  # https://docs.sqlalchemy.org/en/13/core/engines.html#database-urls
  #
  # sqlalchemy_database_uri: postgres://${POSTGRES_USER:-user}:${POSTGRES_PASSWORD:-pass}@localhost:5432/stationlite
  #
  # ----
  # Absolute path to a process ID locking file in order to prevent from having
  # multiple harvesting processes running concurrently.
  #
  # path_pidfile: "/var/tmp/eida-stationlite-harvest.pid"
  #
  # ----
  # Absolute path to a logging configuration file. The file must follow the format
  # defined in
  # https://docs.python.org/3/library/logging.config.html#logging-config-fileformat.
  #
  # PATH_LOGGING_CONF: ${HOME}/work/projects/eidaws/eidaws.stationlite/config/logging.conf
  #
...
