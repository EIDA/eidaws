[loggers]
keys=root,eidaws

[handlers]
keys=eidawsFileHandler

[formatters]
keys=eidaws

[logger_root]
level=NOTSET
handlers=eidawsFileHandler

[logger_eidaws]
level=DEBUG
handlers=eidawsFileHandler
qualname=eidaws
propagate=0

[handler_eidawsFileHandler]
class=handlers.TimedRotatingFileHandler
level=INFO
formatter=eidaws
args=("/var/log/eidaws-federator/{{SERVICE_ID}}.log", 'D', 1, 30)

[formatter_eidaws]
format=<EIDA> %(asctime)s %(levelname)s %(name)s %(process)d %(filename)s:%(lineno)d - %(message)s
datefmt=%Y-%m-%dT%H:%M:%S%z
